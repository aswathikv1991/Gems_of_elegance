<%- include("../../views/partials/admin/header") %>
<link rel="stylesheet" href="/css/salesreport.css">
<title>Admin Dashboard - Sales Report</title>

<div class="container">
    <h2>ðŸ“Š Sales Report</h2>

    <div class="filter-section">
        <label for="salesFilter">Filter by:</label>
        <select id="salesFilter">
            <option value="daily" <%= filterType === 'daily' ? 'selected' : '' %>>Daily</option>
            <option value="weekly" <%= filterType === 'weekly' ? 'selected' : '' %>>Weekly</option>
            <option value="monthly" <%= filterType === 'monthly' ? 'selected' : '' %>>Monthly</option>
            <option value="yearly" <%= filterType === 'yearly' ? 'selected' : '' %>>Yearly</option>
            <option value="custom" <%= filterType === 'custom' ? 'selected' : '' %>>Custom Date Range</option>
        </select>

        <input type="date" id="startDate" class="date-picker" value="<%= startDate ? startDate : '' %>">
        <input type="date" id="endDate" class="date-picker" value="<%= endDate ? endDate : '' %>">
        <button id="applyDateFilter">Apply</button>
    </div>

    <!-- ðŸ“Œ Summary Table -->
    <h3>ðŸ“ˆ Sales Summary</h3>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Total Orders</th>
                <th>Total Order Value</th>
                <th>Total Discounts</th>
                <th>Total Amount Before Delivery</th>
                <th>Total Delivery Charges</th>
                <th>Total Revenue</th>
            </tr>
        </thead>
        <tbody>
            <% if (summaryData.length > 0) { %>
                <% summaryData.forEach(data => { %>
                    <tr>
                        <td><%= data._id ? data._id : 'Custom Range' %></td>
                        <td><%= data.totalOrders %></td>
                        <td>â‚¹<%= data.totalOrderValue.toFixed(2) %></td>
                        <td>â‚¹<%= data.totalDiscounts.toFixed(2) %></td>
                        <td>â‚¹<%= data.totalAmountBeforeDelivery.toFixed(2) %></td>
                        <td>â‚¹<%= data.totalDeliveryCharges.toFixed(2) %></td>
                        <td>â‚¹<%= data.totalRevenue.toFixed(2) %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="7">No summary data available</td>
                </tr>
            <% } %>
        </tbody>
    </table>

   

    <!-- ðŸ“¥ Download Buttons -->
    <div class="download-buttons">
        <a href="/admin/download-sales-report?filter=<%= filterType %>&startDate=<%= startDate %>&endDate=<%= endDate %>&format=excel" class="btn btn-success">
            ðŸ“Š Download Excel
        </a>
        <a href="/admin/download-sales-report?filter=<%= filterType %>&startDate=<%= startDate %>&endDate=<%= endDate %>&format=pdf" class="btn btn-danger">
            ðŸ“„ Download PDF
        </a>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        let filter = "<%= filterType %>";
        let startDateInput = document.getElementById("startDate");
        let endDateInput = document.getElementById("endDate");
        let applyButton = document.getElementById("applyDateFilter");
        console.log("startdate", startDateInput )
        
        if (filter === "custom") {
            startDateInput.style.display = "inline";
            endDateInput.style.display = "inline";
            applyButton.style.display = "inline";
        } else {
            startDateInput.style.display = "none";
            endDateInput.style.display = "none";
            applyButton.style.display = "none";
        }
    });

    document.getElementById('salesFilter').addEventListener('change', function() {
        let filter = this.value;
        let startDateInput = document.getElementById('startDate');
        let endDateInput = document.getElementById('endDate');
        let applyButton = document.getElementById('applyDateFilter');
        
        if (filter === "custom") {
            startDateInput.style.display = "inline";
            endDateInput.style.display = "inline";
            applyButton.style.display = "inline";
        } else {
            startDateInput.style.display = "none";
            endDateInput.style.display = "none";
            applyButton.style.display = "none";
            window.location.href = `/admin/getSales?filterType=${filter}`;
        }
    });

    document.getElementById('applyDateFilter').addEventListener('click', function() {
        let startDate = document.getElementById('startDate').value;
        let endDate = document.getElementById('endDate').value;
        if (startDate && endDate) {
            window.location.href = `/admin/getSales?filterType=custom&startDate=${startDate}&endDate=${endDate}`;
        } else {
            alert("Please select both start and end dates.");
        }
    });
</script>
